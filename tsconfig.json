{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*.json", "**/*.ts", "**/*.js", ".eslintrc.js"],
  "exclude": ["node_modules/", "build/", "public", "dist/", ".cache/", ".tmp/"]
}
