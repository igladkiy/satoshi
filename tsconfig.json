{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "*": ["*", "src/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "**/*.json", "**/*.ts", "**/*.tsx", ".eslintrc.js"],
    "exclude": ["node_modules", "build", "public", "dist", ".cache", ".tmp"]
}
